<Application x:Class="ProcTamer.App"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 StartupUri="MainWindow.xaml">
 <Application.Resources>
 <ResourceDictionary>
 <ResourceDictionary.MergedDictionaries>
 <!-- Use MaterialDesign Light theme only to provide attached properties -->
 <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Light.xaml" />
 </ResourceDictionary.MergedDictionaries>

 <!-- Define minimal brushes and styles used by app so we don't rely on Defaults.xaml or external color resources -->
 <SolidColorBrush x:Key="PrimaryHueMidBrush" Color="#1976D2" />
 <SolidColorBrush x:Key="PrimaryHueDarkForegroundBrush" Color="#222222" />

 <!-- Lightweight flat accent button -->
 <Style x:Key="FlatAccentButton" TargetType="Button">
 <Setter Property="Background" Value="{StaticResource PrimaryHueMidBrush}" />
 <Setter Property="Foreground" Value="White" />
 <Setter Property="Padding" Value="8,6" />
 <Setter Property="BorderThickness" Value="0" />
 <Setter Property="Margin" Value="4,2" />
 <Setter Property="FontWeight" Value="SemiBold" />
 <Setter Property="HorizontalAlignment" Value="Left" />
 <Setter Property="Template">
 <Setter.Value>
 <ControlTemplate TargetType="Button">
 <Border Background="{TemplateBinding Background}" CornerRadius="6">
 <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center" Margin="{TemplateBinding Padding}" />
 </Border>
 </ControlTemplate>
 </Setter.Value>
 </Setter>
 </Style>

 <!-- Outline button -->
 <Style x:Key="FlatOutlineButton" TargetType="Button">
 <Setter Property="Background" Value="Transparent" />
 <Setter Property="Foreground" Value="{StaticResource PrimaryHueDarkForegroundBrush}" />
 <Setter Property="Padding" Value="8,6" />
 <Setter Property="BorderBrush" Value="#FFD0D7DB" />
 <Setter Property="BorderThickness" Value="1" />
 <Setter Property="Margin" Value="4,2" />
 <Setter Property="FontWeight" Value="Normal" />
 <Setter Property="HorizontalAlignment" Value="Left" />
 <Setter Property="Template">
 <Setter.Value>
 <ControlTemplate TargetType="Button">
 <Border Background="{TemplateBinding Background}" CornerRadius="6" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
 <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center" Margin="{TemplateBinding Padding}" />
 </Border>
 </ControlTemplate>
 </Setter.Value>
 </Setter>
 </Style>

 <!-- Minimal text box style -->
 <Style x:Key="MinimalTextBox" TargetType="TextBox">
 <Setter Property="Background" Value="White" />
 <Setter Property="Foreground" Value="#222" />
 <Setter Property="BorderBrush" Value="#E6ECEF" />
 <Setter Property="BorderThickness" Value="1" />
 <Setter Property="Padding" Value="8,6" />
 <Setter Property="Margin" Value="2" />
 </Style>

 <!-- Minimal combo box style (matches TextBox look) -->
 <Style x:Key="MinimalComboBox" TargetType="ComboBox">
 <Setter Property="Background" Value="White" />
 <Setter Property="Foreground" Value="#222" />
 <Setter Property="BorderBrush" Value="#E6ECEF" />
 <Setter Property="BorderThickness" Value="1" />
 <Setter Property="Padding" Value="6" />
 <Setter Property="Margin" Value="2" />
 </Style>

 <!-- Common padding resource -->
 <Thickness x:Key="CardPadding">12</Thickness>
 </ResourceDictionary>
 </Application.Resources>
</Application>
